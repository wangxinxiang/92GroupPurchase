<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_recycleview</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--主界面底部导航-->
    <style name="main_table">
        <item name="android:background">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_size14</item>
        <item name="android:textColor">@drawable/rbtn_text_color_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="title_ibtn">
       <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--来自Demo开始-->
    <style name="more_item_style">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/demo_setting_single_bg</item>
    </style>

    <!--来自Demo结束-->

    <!--我 界面-->
    <style name="me_item">
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/normal_space</item>
        <item name="android:paddingLeft">@dimen/normal_space</item>
        <item name="android:paddingRight">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/space_7</item>
        <item name="android:paddingTop">@dimen/space_7</item>
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="me_tv_comment">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/text_size18</item>
    </style>
    <style name="me_group_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginRight">@dimen/line_height</item>
    </style>
    <style name="me_tv_comment.yellow">
        <item name="android:textColor">@color/yellow</item>
    </style>
    <style name="me_tv_comment.size16">
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="me_item.padding0">
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/main_bg</item>
    </style>
    <style name="me_enter_image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/normal_space</item>
        <item name="android:src">@drawable/enter_gray</item>
    </style>

    <!--group导航-->
    <style name="group_tab">
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/space_15</item>
        <item name="android:textColor">@drawable/rbtn_text_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">@drawable/tab_group_line_focused</item>
    </style>

    <!--钱包-->
    <style name="wallet_text" parent="me_tv_comment">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/space_12</item>
    </style>

    <style name="me_item.margin1">
        <item name="android:layout_marginTop">@dimen/line_height</item>
    </style>

    <!--创建群-->
    <style name="create_group_item">
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/space_15</item>
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:layout_marginTop">@dimen/line_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="create_group_groupType">
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:layout_marginTop">@dimen/line_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/space_0</item>
        <item name="android:paddingTop">@dimen/space_0</item>
        <item name="android:paddingRight">@dimen/space_15</item>
        <item name="android:paddingLeft">@dimen/space_15</item>
    </style>
</resources>
