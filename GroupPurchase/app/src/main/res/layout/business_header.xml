<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/business_header_height"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_business_header_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/cheese_1"
        android:layout_marginBottom="@dimen/space_30"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_business_header_head"
        android:layout_width="@dimen/space_80"
        android:layout_height="@dimen/space_80"
        fresco:placeholderImage="@drawable/cheese_1"
        fresco:actualImageScaleType="focusCrop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_12"/>

    <TextView
        android:id="@+id/tv_business_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size21"
        android:text="傅旭东"
        android:layout_marginBottom="@dimen/space_48"
        android:layout_marginRight="@dimen/space_7"
        android:layout_toLeftOf="@id/image_business_header_head"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>