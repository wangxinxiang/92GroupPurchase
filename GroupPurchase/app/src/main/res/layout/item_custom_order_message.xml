<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <include layout="@layout/item_custom_goods_message" android:id="@+id/layout_goods"/>
    <LinearLayout
        android:layout_width="@dimen/space_160"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_goods"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_price_show"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size18"
            android:text="￥"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_item_price"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size18"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_item_pay"
            android:background="@drawable/rectangle_corners_orange_bg"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:paddingTop="@dimen/space_7"
            android:paddingBottom="@dimen/space_7"
            android:textColor="@color/white"
            android:text="去付款"
            />
    </LinearLayout>
</RelativeLayout>