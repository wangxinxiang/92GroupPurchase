<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tribe_title_bg">

    <ImageButton
        android:id="@+id/ibtn_chat_back"
        style="@style/title_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/back_while" />

    <TextView
        android:id="@+id/tv_chat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ibtn_chat_back"
        android:layout_toLeftOf="@+id/ibtn_chat_collection"
        android:layout_toRightOf="@+id/ibtn_chat_back"
        android:text="群名称"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size24"
         />

    <ImageButton
        android:id="@+id/ibtn_chat_info"
        style="@style/title_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/ibtn_chat_collection"
        style="@style/title_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_toLeftOf="@+id/ibtn_chat_info"
        android:layout_toStartOf="@+id/ibtn_chat_info"
        android:src="@drawable/ibtn_collection_selector" />
</RelativeLayout>